{
    "manifest_version": 2,
    "name": "Auto Scroll",
    "version": "0.1",
    "browser_action": {
        "default_icon": "./icons/icon_32.png",
        "default_popup": "./popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./scripts/content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}